<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:orientation="vertical"
    android:background="@drawable/list_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thumbnail"
        android:padding="3dp"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_travel"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_name"
        android:layout_alignTop="@id/thumbnail"
        android:text="Travel name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/spaceGreen"
        android:layout_toRightOf="@id/thumbnail"
        android:layout_marginRight="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_destination"
        android:layout_below="@id/list_name"
        android:text="Destination"
        android:textColor="@color/spaceGreen"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/thumbnail"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_dateText"
        android:layout_below="@id/list_destination"
        android:text="Date:"
        android:textColor="@color/spaceGreen"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/thumbnail"
        />
    <TextView
        android:id="@+id/list_timeText"
        android:text="time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/list_dateText"
        android:layout_marginRight="100dp"
        android:textColor="@color/spaceGreen"
        />
</RelativeLayout>